{{> navigationClassManage }}

<div class="container">
  <div
    id="js-class-uuid"
    hidden
    aria-hidden="true"
    data-class-uuid="{{class_uuid}}"
  >
  </div>
  <div class="row">
    <div class="col-12">
      <h1 class="mt-3 text-muted">Manage Class: {{className}}</h1>
    </div>
    <div class="col-12">
      <div class="text-muted">Class Password (for Student Login): {{classPassword}}</div>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-sm-12">
      <div class="card shadow">
        <div class="card-header">Assign Task    |    Add Students    |    Add Task    |    Add Coins</div>
        <div class="card-body">
          <div class="mb-4">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th scope="col">Assign Task</th>
                  <th scope="col">Student Name</th>
                  <th scope="col">Student Id</th>
                  <th scope="col">Finished Task(s)</th>
                  <th scope="col">Coin Count</th>
                </tr>
              </thead>
              <tbody>
                {{#each students}}
                  <tr>
                    {{!-- Checkbox --}}
                    <td class="checkbox">
                      <input type="checkbox" data-add='student' data-student-uuid='{{uuid}}'>
                    </td>
                    {{!-- Student's Name --}}
                    <td scope="row">{{name}}</td>
                    {{!-- student's 'assigned-by-teacher' ID --}}
                    <td>{{ student_id }}</td>
                    {{!-- Boolean of task if task finished --}}
                    <td>
                      {{#if Tasks}}
                        NO
                      {{/if}}
                      {{#unless Tasks}}
                        YES
                      {{/unless}}
                    </td>
                    {{!-- Student's total coin count --}}
                    <td>
                      {{coin_count}}
                      <button
                        type="button"
                        class="btn btn-outline-warning ml-1"
                        data-increment-coins="student"
                        data-student-uuid='{{uuid}}'
                      >
                        <i class="fas fa-plus"></i>
                      </button>
                    </td>
                    <td>
                    <button
                      type="button"
                      class="btn btn-outline-danger my-2 my-sm-0"
                      data-delete="student"
                      data-id="{{uuid}}"
                      data-name="{{name}}"
                      data-toggle="modal"
                      data-target="#js-modal-student-delete"
                    >
                      <i
                        class="fas fa-trash-alt"
                        data-id="{{uuid}}"
                        data-name="{{name}}"
                      >
                      </i>
                    </button>
                    </td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
            {{!-- Add student form --}}
            <form id="js-form-add-student">
              <div class="input-group mb-4">
                <div class="input-group-prepend">
                  <span class="input-group-text bg-secondary text-white">Add Student Name</span>
                </div>
                <input
                  id="js-add-student-name"
                  type="text"
                  class="form-control js-class-add-student"
                  required
                >
                <div class="input-group-prepend">
                  <span class="input-group-text bg-secondary text-white">Add Student Id</span>
                </div>
                <input
                  id="js-add-student-id"
                  type="text"
                  class="form-control js-class-add-student"
                  required
                >
              </div>
            </form>
            {{!-- End 'Add student form' --}}
            <span>
              <button
                type="button"
                class="btn btn-outline-success"
                data-toggle="modal"
                data-target="#js-modal-task-assignment"
                data-delete="class"
              >
                ADD TASK(S)
              </button>
            </span>
            {{>modalAssignTasks}}
            {{> modalDeleteStudent }}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
