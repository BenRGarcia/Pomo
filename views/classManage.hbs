{{> navigationClassManage }}

<div class="container">
  <div class="row">
    <h1 class="mt-3 text-muted">Manage Class</h1>
  </div>
  <hr>
  <div class="row">
    <div class="col-sm-12">
      <div class="card shadow">
        <div class="card-header">Students Name | Student Id | Coins</div>
        <div class="card-body">
          <div class="mb-4">
            <thead>
              <tr>
                <th class="checkbox">
                  <label>Select All</label>
                  <input type="checkbox" value="" id='js-select-all'>
                </th>
                <th>Student Name</th>
                <th>Coin Count/Edit</th>
                <th>Time Remaining</th>
                <th>Finished Task(s)</th>
              </tr>
            </thead>
            <tbody>
{{!-- Variable legend: Here's how to access all data send from the backend to `.hbs` --}}
            {{!-- 
              {{#each students}}
                <div>
                  <p>students.uuid: {{uuid}}</p>
                  <p>students.name: {{name}}</p>
                  <p>students.coin_count: {{coin_count}}</p>
                  <p>students.class_uuid: {{class_uuid}}</p>
                  <h3>tasks:</h3>
                  <ul>
                    {{#each Tasks}}
