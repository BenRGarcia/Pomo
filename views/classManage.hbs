<div class="container">
  <div class="row">
    <h1 class="mt-3 text-muted">
      Manage Class
    </h1>
  </div>
  <hr>
  <div class="row">
    <div class="col-sm-12">
      <div class="card shadow">
        <div class="card-header">
          Students Name | Student Id | Coins
        </div>
        <div class="card-body">
          <div class="mb-4">
            <thead>
              <tr>
                <th class="checkbox">
                  <label>
                    Select All
                  </label>
                  <input type="checkbox" value="" id='js-select-all'>
                </th>
                <th>
                  Student Name
                </th>
                <th>
                  Coin Count/Edit
                </th>
                <th>
                  Time Remaining
                </th>
                <th>
                  Finished Task(s)
                </th>
              </tr>
            </thead>
            <tbody>
              {{!-- Variable legend: Here's how to access all data send from the backend to `.hbs` --}}
              {{#each students}}
                <div>
                  <p>students.uuid: {{uuid}}</p>
                  <p>students.name: {{name}}</p>
                  <p>students.coin_count: {{coin_count}}</p>
                  <p>students.class_uuid: {{class_uuid}}</p>
                  <h3>tasks:</h3>
                  <ul>
                    {{#each Tasks}}
                    <li style="color: black;">
                      task.uuid: {{this.uuid}} 
                      task.name: {{this.name}} 
                      task.timer_duration: {{this.timer_duration}} 
                      task.start_time: {{this.start_time}}
                      task.is_done: {{this.is_done}} 
                      task.coin_value: {{this.coin_value}} 
                      task.student_uuid: {{this.student_uuid}}
                    </li>
                    {{/each}}
                  </ul>
                </div>
              {{#each Student}}
              <tr>
                <td class="checkbox">
                  <label>
                    <input type="checkbox" value="" data-add='student' id='js-select-all'>
                  </label>
                </td>
                <td>
                  {{name}}
                </td>
                <td contenteditable='true'>
                  {{coin_count}}
                </td>
                {{!-- NEED TO WRITE JS TO CALCULATE TIME REMAINING --}}
                <td>
                  {{timeRemaining}}
                </td>
                <td>
                  {{#if isDone}}
                  <span class="glyphicon">&#xe013;</span>
                  {{/if}}
                </td>
              </tr>
              {{/each}}
            </tbody>
            <span>
              <button type="button" class="btn btn-outline-success" data-toggle="modal" data-target="#js-modal-task-assignment" data-delete="class">
                ADD TASKS
              </button>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>

