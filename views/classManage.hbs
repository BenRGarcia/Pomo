{{> navigationClassManage }}

<div class="container">
  <div class="row">
    <h1 class="mt-3 text-muted">Manage Class</h1>
  </div>
  <hr>
  <div class="row">
    <div class="col-sm-12">
      <div class="card shadow">
        <div class="card-header">This Should Be The Class Name...How To Handlebars please?</div>
        <div class="card-body">
          <div class="mb-4">
            

            <table class="table table-striped">
              <thead>
                <tr>
                  <th scope="col">Assign Task</th>
                  <th scope="col">Student Name</th>
                  <th scope="col">Student Id</th>
                  <th>Finished Task(s)</th>
                  <th scope="col">Coin Count</th>
                </tr>
              </thead>


              <tbody>
                  <td class="checkbox">
                  <label></label>
                  <input type="checkbox" value="" data-add='student' id='js-select-all'>
                  </td>
                  <th scope="row">Mark A.</th>
                  <td>A13421</td>
                  <td>Yes</td>
                  <td>25</td>
                </tr>
                <tr>
                   <td class="checkbox">
                  <label></label>
                  <input type="checkbox" value="" data-add='student' id='js-select-all'>
                  </td>
                  <th scope="row">Jacob B.</th>
                  <td>B43567</td>
                  <td>No</td>
                  <td>20</td>
                </tr>
              </tbody>
            </table>


            <span>
              <button type="button" class="btn btn-outline-success" data-toggle="modal" data-target="#js-modal-task-assignment" data-delete="class">
                ADD TASKS
              </button>
              <button type="button" class="btn btn-outline-secondary" data-toggle="modal" data-target="#js-modal-task-assignment" data-delete="class">
                ADD STUDENT
              </button>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>







