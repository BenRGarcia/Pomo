                  </ul>
                </div>
              {{#each Student}}
            --}}
              <tr>
                <td class="checkbox">
                  <label></label>
                  <input type="checkbox" value="" data-add='student' id='js-select-all'>
                </td>
                <td>{{name}}</td>
                <td contenteditable='true'>{{coin_count}}</td>
                <td>{{timeRemaining}}</td>
                <td>
                  {{#if isDone}}
                    <span class="glyphicon">&#xe013;</span>
                  {{/if}}
                </td>
              </tr>
            </tbody>
            <span>
              <button
                type="button"
                class="btn btn-outline-success"
                data-toggle="modal"
                data-target="#js-modal-task-assignment"
                data-delete="class"
              >
                ADD TASKS
              </button>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

