<div
  class="modal fade"
  id="js-modal-delete-class"
  tabindex="-1"
  role="dialog"
  aria-labelledby="delete-class"
  aria-hidden="true"
>
  <div
    class="modal-dialog"
    role="document"
  >
    <div
      class="modal-content"
    >
      <div
        class="modal-header"
      >
        <h5
          class="modal-title"
          id="delete-class-title"
        >
          Are you absolutely sure?
        </h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span
            aria-hidden="true"
          >
            &times;
          </span>
        </button>
      </div>
      <div
        class="modal-body"
      >
        <form
          id="js-modal-delete-form"
        >
          <p>
            This action will permanently delete the class and cannot be undone.
          </p>
          <div
            class="form-group"
          >
            <label
              for="js-modal-delete-input"
            >
              Please type in the name of the class to confirm deletion:
            </label>
            <input
              class="form-control"
              id="js-modal-delete-input"
            >
          </div>
        </form>
      </div>
      <div
        class="modal-footer"
      >
        <button
          id="js-modal-delete-button"
          type="submit"
          class="btn btn-danger"
          form="js-modal-delete-form"
          disabled
        >
          Permanently Delete Class
        </button>
      </div>
    </div>
  </div>
</div>