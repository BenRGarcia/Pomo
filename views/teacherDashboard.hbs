{{> navigationClassManage }}

<div class="container">
  <div class="row">
    <h1 class="mt-3 text-muted">
      Teacher Dashboard
    </h1>
  </div>
  <hr/>
  <div class="row">
    <div class="col-sm-8">
      <div class="card shadow">
        <div class="card-header">
          <i class="fas fa-book mr-1"></i>
          My Classes
        </div>
        <div class="card-body">
          <div class="mb-4">
            <button class="btn btn-outline-success my-2 my-sm-0" id="js-teacher-class-add">
              Add Class
            </button>
          </div>
          {{#if classes}} {{#each classes}}
          <div class="card shadow-sm mb-2">
            <a href='/teacher/class/{{uuid}}/manage'>
              <div class="card-body text-muted">
                {{name}}
              </div>
            </a>
            <button type="button" class="btn btn-outline-danger my-2 my-sm-0" data-toggle="modal" data-target="#js-delete-class" data-delete="class"
              data-id="{{uuid}}" data-name="{{name}}">
              <i class="fas fa-trash-alt mr-2" data-id="{{uuid}}" data-name="{{name}}"></i>Delete
            </button>
          </div>
          {{/each}} {{/if}} {{>modalDeleteClass}} {{>modalAddClass}}
        </div>
      </div>
    </div>

    <div class="col-sm-4">
      <div class="card shadow">
        <div class="card-header">
          <i class="fas fa-bell"></i>
          Notifications
        </div>
        <div class="card-body">
          <blockquote class="blockquote mb-0">
            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer posuere erat a ante.</p>
            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer posuere erat a ante.</p>
