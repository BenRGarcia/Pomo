<h1>Login</h1>
<form
  id="js-form-login"
>
  <div
    class="form-group"
  >
    <label
      for="js-username"
      hidden="true"
    >
      Username
    </label>
    <input
      type="text"
      class="form-control"
      id="js-username"
      aria-describedby="usernameHelp"
      placeholder="Username"
      required
    >
  </div>
  <div
    class="form-group"
  >
    <label
      for="js-password"
      hidden="true"
    >
      Password
    </label>
    <input
      type="password"
      class="form-control"
      id="js-password"
      placeholder="Password"
      required
    >
  </div>
  <button
    type="submit"
    class="btn btn-primary"
  >
    Login
  </button>
</form>
